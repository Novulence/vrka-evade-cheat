-- Button creator
local function createButton(text, posY)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 200, 0, 35)
	btn.Position = UDim2.new(0.5, -100, 0, posY)
	btn.BackgroundColor3 = Color3.fromRGB(60, 50, 100) -- galaxy purple
	btn.BackgroundTransparency = 0.2
	btn.TextColor3 = Color3.fromRGB(200, 210, 255) -- starlight glow
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 15
	btn.Text = text .. " âœ§"
	btn.Parent = frame

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 10)
	corner.Parent = btn

	-- Hover Effects
	btn.MouseEnter:Connect(function()
		btn.BackgroundColor3 = Color3.fromRGB(85, 70, 140)
	end)
	btn.MouseLeave:Connect(function()
		btn.BackgroundColor3 = Color3.fromRGB(60, 50, 100)
	end)

	return btn
end
